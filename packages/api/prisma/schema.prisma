generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Asset {
  id          Int       @id @default(autoincrement())
  ticker      String    @unique
  type        AssetType
  fullName    String
  description String?
}

enum AssetType {
  Stock
  Crypto
}

model Currency {
  id       Int    @id @default(autoincrement())
  code     String @unique
  fullName String
}
