generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  password String
  roles    UserRole[]

  @@index([roles(ops: ArrayOps)], type: Gin)
}

enum UserRole {
  Admin
}

model Asset {
  id           Int       @id @default(autoincrement())
  tickerSymbol String    @unique
  type         AssetType
  fullName     String
  description  String?

  @@index([type], type: Hash)
  @@index([tickerSymbol, fullName])
}

enum AssetType {
  Stock
  Crypto
}

model Currency {
  id       Int    @id @default(autoincrement())
  code     String @unique
  fullName String

  @@index([code, fullName])
}
